@page
@model LoginModel

@{
    ViewData["Title"] = " ";
}

<style>
    /* Custom styles for a white background */
    .white-login-form {
        background-color: #fff; /* White background color */
        border-radius: 10px;
        padding: 20px;
        color: #000; /* Black text color for better visibility on a white background */
    }

</style>

<h1>@ViewData["Title"]</h1>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow white-login-form">
                <div class="card-body">
                    <h2 class="card-title text-center">
                        Use a local account to log in
                    </h2>
                    <hr />

                    <form id="account" method="post">

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label"><i class="bi bi-envelope"></i> Email</label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label"><i class="bi bi-lock"></i> Password</label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label" asp-for="Input.RememberMe">
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <div class="col-sm-9 offset-sm-3">
                                <button id="login-submit" type="submit" class="w-100 btn btn-success">
                                    <i class="bi bi-door-open"></i> Log in
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
